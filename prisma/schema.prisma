generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        String   @id @default(uuid())
  name      String   @unique
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  updtaedAt DateTime @updatedAt
}

enum Role {
  INTERN
  ENGINEER
  ADMIN
}
